{
  "manifest_version": 3,
  "name": "Browser Pipe Sender",
  "version": "1.0",
  "description": "Sends URLs to the Browser Pipe Plumber.",
  "permissions": [
    "nativeMessaging",
    "contextMenus",
    "activeTab",
    "scripting" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Browser"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
